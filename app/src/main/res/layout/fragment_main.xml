<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="210dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Present Sitting Posture"
        android:textColor="@color/font_color"
        android:textSize="20dp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_shadow" />

    <TextView
        android:id="@+id/alarm_msg"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="You are sitting in the right posture :D"
        android:textColor="#0FA059"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@+id/alarm_msg"
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/posture_sample2" />

    <TextView
        android:id="@+id/display_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="70dp"
        android:text="Image from 1 min ago"
        android:textColor="@color/font_color"
        android:textSize="15dp" />


</RelativeLayout>